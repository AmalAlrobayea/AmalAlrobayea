swagger: '2.0'
info:
  title: Identity Service Authorization API
  x-ibm-name: identity-service-authorization-api
  version: 3.0.0
  description: This API will be used to retrieve token for user.
host: sapis.fasah.sa
schemes:
  - https
basePath: /tabadul/fasahsb/oauth2/token/v3
security:
  - ClientID: []
    ClientSecret: []
securityDefinitions:
  ClientID:
    type: apiKey
    name: X-Tabadul-Client-Id
    in: header
    x-key-type: client_id
  ClientSecret:
    type: apiKey
    name: X-Tabadul-Client-Secret
    in: header
    x-key-type: client_secret
x-ibm-configuration:
  cors:
    enabled: true
  type: rest
  phase: realized
  enforced: true
  testable: true
  application-authentication:
    certificate: false
  servers:
    - url: 'https://sapis.fasah.sa/tabadul/fasahsb/oauth2/token/v3'
      description: external sandbox for testing
      type:
        - Development
definitions:
  AuthFault:
    type: object
    additionalProperties: false
    properties:
      httpCode:
        type: string
      httpMessage:
        type: string
      moreInformation:
        type: string
  response:
    description: ''
    type: object
    properties:
      access_token:
        type: string
      token_type:
        type: string
    example:
      access_token: eyJhbGciOiJIUzUxMiJ9.ey
      token_type: Bearer
paths:
  /jwt:
    post:
      responses:
        '200':
          description: successful operation
          schema:
            $ref: '#/definitions/response'
        '400':
          description: Bad Request
          schema:
            $ref: '#/definitions/AuthFault'
        '401':
          description: Unauthorized
          schema:
            $ref: '#/definitions/AuthFault'
        '500':
          description: Could Not Access Resource
          schema:
            $ref: '#/definitions/AuthFault'
      parameters:
        - name: username
          in: formData
          required: true
          description: Pass user name in this field
          type: string
        - name: password
          in: formData
          required: true
          description: Pass password in this field
          type: string
      consumes:
        - application/x-www-form-urlencoded
      produces:
        - application/json
