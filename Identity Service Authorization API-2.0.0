swagger: '2.0'
info:
  title: Identity Service Authorization API
  x-ibm-name: identity-service-authorization-api
  version: 2.0.0
  description: This API will be used to retrieve token for user.
host: sapis.fasah.sa
schemes:
  - https
basePath: /tabadul/fasahsb/oauth2/token/v2
produces: []
consumes: []
security:
  - ClientID: []
    ClientSecret: []
securityDefinitions:
  ClientSecret:
    type: apiKey
    name: X-Tabadul-Client-Secret
    in: header
    x-key-type: client_secret
  ClientID:
    type: apiKey
    name: X-Tabadul-Client-Id
    in: header
    x-key-type: client_id
x-ibm-configuration:
  cors:
    enabled: true
  type: rest
  phase: realized
  enforced: true
  testable: true
  application-authentication:
    certificate: false
  servers:
    - url: 'https://sapis.fasah.sa/tabadul/fasahsb/oauth2/token/v2'
      description: external sandbox for testing
      type:
        - Development
definitions:
  AuthFault:
    type: object
    additionalProperties: false
    properties:
      httpCode:
        type: string
      httpMessage:
        type: string
      moreInformation:
        type: string
  response:
    type: object
    additionalProperties: false
    properties:
      token:
        type: string
        example: '"token": "Bearer eyJhbGciOiJIUzUxMiJ9.ey"'
paths:
  /jwt:
    post:
      responses:
        '200':
          description: successful operation
          schema:
            $ref: '#/definitions/response'
        '400':
          description: Bad Request
          schema:
            $ref: '#/definitions/AuthFault'
        '500':
          description: Could Not Access Resource
          schema:
            $ref: '#/definitions/AuthFault'
      parameters: []
      consumes: []
      produces: []
